{% extends 'base.html.twig' %}

{% block title %}Movie-DB :: Create a tag{% endblock %}

{% block body %}

{{ form_start(form, {'class': 'form-horizontal'}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Tag name', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.name,
                {'attr':
                    {   'class':        'form-control input-sm',
                        'placeholder':  'Enter the tag name'
                    }
                })
            }}
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.color, 'Tag color', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.color,
                {'attr':
                    {   'class':        'form-control input-sm',
                        'placeholder':  'Enter the tag color'
                    }
                })
            }}
            {{ form_errors(form.color) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
        </div>
    </div>

{{ form_rest(form) }}
{{ form_end(form) }}


    <script>

        $('#form_color').ColorPicker({
                    onSubmit: function(hsb, hex, rgb, el) {
                        $(el).val(hex);
                        $(el).ColorPickerHide();
                    },
                    onBeforeShow: function () {
                        $(this).ColorPickerSetColor(this.value);
                    }
                })
                .bind('keyup', function(){
                    $(this).ColorPickerSetColor(this.value);
                });

    </script>


{% endblock %}